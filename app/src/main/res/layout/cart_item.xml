<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:id="@+id/cart_cardView"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_img_in_cart"
           android:layout_margin="@dimen/internal_margin"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:background="@color/purple"
           />


       <TextView
           android:id="@+id/tv_cart_item_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/iv_img_in_cart"
           android:layout_marginTop="11dp"
           android:layout_toEndOf="@+id/iv_img_in_cart"
           android:text="TextView" />

       <TextView
           android:id="@+id/tv_cart_item_price"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/iv_img_in_cart"
           android:layout_marginBottom="11dp"
           android:layout_toEndOf="@+id/iv_img_in_cart"
           android:text="TextView" />

       <ImageButton
           android:id="@+id/imageButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="20dp"
           android:background="@color/white"
           android:src="@drawable/ic_cancel" />


   </RelativeLayout>

</android.support.v7.widget.CardView>